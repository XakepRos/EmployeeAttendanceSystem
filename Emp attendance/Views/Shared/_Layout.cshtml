<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Attendance</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/template.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Attendance", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Designation", "Index", "Designation")</li>
                    <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                    <li>@Html.ActionLink("Attendance", "Index", "Attendance")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="ModalCreate" class="ModalCreatePopUp">
            <div class="frame">
                <div class="box_layout">
                    <div class="heading">
                        <button class="close" id="btnChatClose"><i class="fa fa-close"></i></button>
                    </div>
                    <div class="content">
                        <div class="form-group">
                            <div class="modal-body">

                            </div>
                            <div class="box-group">
                                <button type="button" id="btnCreate">Save</button>
                                <button class="button" id="btnClose">Cancel</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="ModalEdit" class="ModalEditPopUp">
            <div class="frame">
                <div class="box_layout">
                    <div class="heading">
                        <button class="close" id="btnChatClose"><i class="fa fa-close"></i></button>
                    </div>
                    <div class="content">
                        <div class="form-group">
                            <div class="modal-body">

                            </div>
                            <div class="box-group">
                                <button type="button" id="btnModalEdit">Save</button>
                                <button class="button" id="btnCloseEdit">Cancel</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Attendance Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
